<Project Sdk="Microsoft.NET.Sdk.Worker">
  <PropertyGroup>
    <TargetFramework>net8.0-windows</TargetFramework>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <OutputType>Exe</OutputType>
    <UseWindowsService>true</UseWindowsService>
    <PublishSingleFile>true</PublishSingleFile>
    <SelfContained>true</SelfContained>
    <PublishTrimmed>true</PublishTrimmed>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <!-- Serilog for app + filtered SMTPâ€only logs -->
    <PackageReference Include="Serilog.Extensions.Hosting" Version="9.0.0" />
    <PackageReference Include="Serilog.Sinks.File" Version="6.0.0" />
    <PackageReference Include="Serilog.Filters.Expressions" Version="3.4.0" />
    <!-- SMTP server & relay dependencies -->
    <PackageReference Include="SmtpServer" Version="11.0.0" />
    <PackageReference Include="MailKit" Version="4.2.0" />
    <!-- IP range parsing library -->
    <PackageReference Include="IPAddressRange" Version="6.2.0" />
  </ItemGroup>
</Project>
